<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="edu.dlsu.mobapde.wername.ArrivedActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WerNaMe?"
        android:textColor="@color/colorGrey"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:background="@color/colorNewYellow"
        android:id="@+id/header"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:id="@+id/tv_src"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="10dp"
                        android:text="Source"
                        android:textColor="@color/colorGrey"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_time_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_src"
                        android:layout_centerHorizontal="true"
                        android:text="9:00 AM"
                        android:textColor="@color/colorGrey"
                        android:textSize="17sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/itinerary" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"

                    >

                    <TextView
                        android:id="@+id/tv_dst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="10dp"
                        android:text="Destination"
                        android:textColor="@color/colorGrey"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_time_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_dst"
                        android:layout_centerHorizontal="true"
                        android:text="9:00 PM"
                        android:textColor="@color/colorGrey"
                        android:textSize="17sp" />
                </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:paddingTop="10dp"
                android:paddingBottom="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/pnumber"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="55dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/license_plate_2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/tv_platenum"
                        android:text="ABC-123"

                        android:textColor="@color/colorGrey"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/time"
                    android:layout_weight="1"
                    android:paddingTop="10dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/hourglass"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="45minutes"
                        android:paddingTop="5dp"
                        android:textColor="@color/colorGrey"
                        android:id="@+id/tv_travelTime"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/sentto"
                    android:layout_weight="1"
                    android:paddingTop="10dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/mail_2"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="mamamo"
                        android:paddingTop="5dp"
                        android:textColor="@color/colorGrey"
                        android:id="@+id/tv_message"
                        />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_arrived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:text="Arrived"
                android:textColor="@color/colorGrey"
                android:textSize="17sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_extend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:text="Extend"
                android:textColor="@color/colorGrey"
                android:textSize="17sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:textAllCaps="false"
                android:elevation="5dp"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:text="Cancel"
                android:textColor="@color/colorGrey"
                android:textSize="17sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:textAllCaps="false"/>
            </LinearLayout>
    </ScrollView>
</LinearLayout>
